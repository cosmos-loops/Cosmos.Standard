<Project>

    <PropertyGroup>
        <AssemblyName>Cosmos.Extensions.Reflection</AssemblyName>
        <PackageId>Cosmos.Extensions.Reflection</PackageId>
        <Description>Cosmos reflection extension library</Description>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net452' ">
        <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="3.1.6" />
        <PackageReference Include="FastMember" Version="1.3.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net462' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net472' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net48' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.1' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.0' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">
        <PackageReference Include="NMS.DynamicCache" Version="1.1.0.1" />
        <PackageReference Include="Alexinea.FastMember" Version="1.5.0" />
    </ItemGroup>
    
</Project>